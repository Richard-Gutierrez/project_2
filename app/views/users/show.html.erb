

<body>

<div class="show_background">

<main>

  <h1 class="secondpg">Welcome to PayMeNow</h1>

  <h2><%= @user.name %></h2>

  <% if @user.card %>
    <h3>Card</h3>

    <div class="card">
      <h4><%= @user.card.card_type %>: <%=@user.card.number %></h4>
    </div>
  <% else %>
    <div>
      <%= link_to 'Create a Card', new_card_path, class: 'btn btn-primary' %>
    </div>
  <% end %>

<%= link_to "Edit your Profile", edit_user_path(@user) %>

<%- model_class = Payment -%>

<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human %></h1>
</div>

<%= form_for @payment, :html => { :class => 'form-horizontal' } do |f| %>

<div class="control-group">
  <%= f.label :amount, 'Price', :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :amount, :class => 'text_field' %>
  </div>
</div>



<div class="form-actions">
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              payments_path, :class => 'btn' %>
</div>
<% end %>

</div>

</body>








